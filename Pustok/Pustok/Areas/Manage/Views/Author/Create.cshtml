@model Author
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <h1>Create</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FullName">Name</label>
            <input type="text" asp-for="FullName" class="form-control">
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Desc">Desc</label>
            <textarea asp-for="Desc" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>

        <div class="form-group">
            <input asp-for="ImageFile" value="" />
            <span class="text-danger" asp-validation-for="ImageFile"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
