@model Book
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <h1>Create</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Desc">Desc</label>
            <textarea asp-for="Desc" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="CostPrice">CostPrice</label>
                <input asp-for="CostPrice" value="" class="form-control" />
                <span class="text-danger" asp-validation-for="CostPrice"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" value="" class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="DiscountedPrice">DiscountedPrice</label>
                <input asp-for="DiscountedPrice" class="form-control" value="" />
                <span class="text-danger" asp-validation-for="DiscountedPrice"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Code">Code</label>
                <input asp-for="Code" class="form-control" value="" />
                <span class="text-danger" asp-validation-for="Code"></span>
            </div>
            <div class="form-group col-md-3">
                <label for="exampleFormControlSelect1">Genre</label>
                <select class="form-control" asp-for="GenreId" asp-items="@(new SelectList(ViewBag.Genres,"Id","Name"))">
                </select>
                <span class="text-danger" asp-validation-for="GenreId"></span>
            </div>
            <div class="form-group col-md-3">
                <label for="exampleFormControlSelect1">Author</label>
                <select class="form-control" asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors,"Id","FullName"))">
                </select>
                <span class="text-danger" asp-validation-for="AuthorId"></span>
            </div>
            <div class="form-group col-md-3">
                <label for="exampleFormControlSelect1">Publisher</label>
                <select class="form-control" asp-for="PublisherId" asp-items="@(new SelectList(ViewBag.Publishers,"Id","Name"))">
                </select>
                <span class="text-danger" asp-validation-for="PublisherId"></span>

            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsAvailable">
                    <label class="form-check-label" asp-for="IsAvailable">

                    </label>
                </div>
            </div>
            <div class="form-group col-md-3">

                <div class="form-check">
                    <input class="form-check-input" asp-for="IsNew">
                    <label class="form-check-label" asp-for="IsNew">

                    </label>
                </div>
            </div>
            <div class="form-group col-md-3">

                <div class="form-check">
                    <input class="form-check-input" asp-for="IsFeatured">
                    <label class="form-check-label" asp-for="IsFeatured">

                    </label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <input asp-for="PosterImage" value="" />
                <span class="text-danger" asp-validation-for="PosterImage"></span>
            </div>
            <div class="form-group">
                <input asp-for="HoverPosterImage" value="" />
                <span class="text-danger" asp-validation-for="HoverPosterImage"></span>
            </div>
            <div class="form-group">
                <input asp-for="Images" value="" />
                <span class="text-danger" asp-validation-for="Images"></span>
            </div>
        </div>





            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

